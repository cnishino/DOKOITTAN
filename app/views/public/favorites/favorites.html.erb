<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h4>いいねした投稿一覧</h4>
      <table class="table text-center">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_locations.each do |post_location| %>
            <tr>
              <td><%= image_tag post_location.get_post_image(50,50), class:"rounded-circle"; %></td>
              <td><%= post_location.user.name %></td>
              <td>ジャンル：<%= post_location.genre.name %></td>
	            <td>地域：<%= post_location.prefecture %></td>
              <td><%= link_to 'Show', post_location, class: "post_location_#{post_location.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
