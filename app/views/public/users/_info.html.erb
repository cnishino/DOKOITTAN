<%= link_to user_path(user.id) do%>
  <a class='d-flex justify-content-center'><%= image_tag user.get_profile_image(200,200), class:"rounded-circle"; %></a>
<% end %>
<table class='table'>
  <tr>
	  <th>名前</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
<% if user == current_user %>
  <tr>
    <th>いいねした投稿数</th>
    <th><%= link_to favorites.count, favorites_user_path(user) %></th>
  </tr>
<% end %>
</table>

<div class='row'>
  <% if current_user != user && user.name != "guestuser" %>
    <span class='mx-3'><%= render "public/relationships/btn", user: user %></span>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-light btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
