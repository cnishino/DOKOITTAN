<div class='container'>
  <div class='row d-flex justify-content-center'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>マイページ編集画面</h2>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">名前</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">画像</label>
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
        </div>
        <div class="form-group">
          <label for="inputText">自己紹介</label>
          <%= f.text_area :introduction, class:"form-control", rows:"5" %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">変更内容を保存</button>
          <%= link_to "退会する", users_unsubscribe_path,  class:"btn btn-danger col-md-3 offset-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
