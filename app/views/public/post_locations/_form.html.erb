<%= form_with model: post_location, local:true do |f| %>

  <div class="form-group row">
    <%= f.label :facility_name %>
    <%= f.text_field :facility_name, class: 'form-control facility_name' %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :body, class: 'form-control introduction' %>
  </div>

  <div class="form-group">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :genre %>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre, {prompt: '  --  選択してください  --  '} %>
  </div>

  <div class="form-group">
    <%= f.label :prefecture %>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture, {prompt: '  --  選択してください  --  '} %>
  </div>

  <div class="form-group">
    <%= f.label :target_age %>
    <%= f.collection_select :target_age_id, TargetAge.all, :id, :target_age, {prompt: '  --  選択してください  --  '} %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :status, '投稿', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :status, "下書き", value: false %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>