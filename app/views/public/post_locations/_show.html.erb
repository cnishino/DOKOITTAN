  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_location_path(post_location.id) do %>
      <%= image_tag post_location.get_post_image(100,100), class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_location.user.get_profile_image(50,50), class:"index_profile_image mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_location_path(post_location.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_location.facility_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">ジャンル：<%= post_location.genre.name %></p>
          <p class="card-text">都道府県：<%= post_location.prefecture %></p>
          <p class="card-text">対象年齢：<%= post_location.target_age.target %></p>
          <p class="card-text">紹介文：<%= post_location.introduction %></p>
          <span><i class="fas fa-user"></i> By <%= post_location.user.name %> | </span>
          <span><%= link_to "#{post_location.post_comments.count} コメント", post_location_path(post_location.id)%></span>
          <span class=<%= "favorite-" + post_location.id.to_s %>><%= render "public/favorites/btn", post_location: post_location %></span>
          <% if @post_location.user == current_user %>
            <p><%= link_to '編集', edit_post_location_path(@post_location), class: "btn btn-sm btn-success edit_post_location_#{@post_location.id}" %></p>
            <p><%= link_to '削除', @post_location, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_location_#{@post_location.id}"%></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
