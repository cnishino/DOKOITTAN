<div class='container px-2 px-sm-0'>
<!--会員のキーワード検索の時↓-->
      <% if @model == 'user' %>
      	<div class='row'>
        	<h4>会員検索： "<%= @content %>"</h4>
        </div>

        	<% if @records.size == 0 %>
          	<div class='row'>
            	<p>検索条件と十分に一致する結果が見つかりませんでした。</p>
            </div>
        	<% else %>
            <%= render 'public/users/index', users: @records %>
          <% end %>

<!--投稿のキーワード検索の時↓-->
      <% elsif @model == 'post_location' %>
      	<div class='row'>
        	<h4>投稿検索： "<%= @content %>"</h4>
        </div>

        	<% if @records.empty? %>
          	<div class='row'>
            	<p>検索条件と十分に一致する結果が見つかりませんでした。</p>
            </div>
        	<% else %>
            <%= render 'public/post_locations/search_index', post_locations: @records %>
          <% end %>

<!--投稿の絞り込み検索の時↓-->
      <% else %>
      	<div class='row'>
        	<h4>投稿検索： "<%= @content %>"</h4>
        </div>
        	<% if @records.empty? %>
          	<div class='row'>
            	<p>検索条件と十分に一致する結果が見つかりませんでした。</p>
            </div>
        	<% else %>
            <%= render 'public/post_locations/search_index', post_locations: @records %>
          <% end %>

      <% end %>
  </div>
</div>
