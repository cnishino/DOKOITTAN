<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-11 offset-1'>
      <h4>投稿一覧</h4>
        <div class="card-deck">
          <% @post_locations.each do |post_location| %>
          <div class="card  w-100 h-100" >
              <%= link_to post_location_path(post_location.id) do %>
                <%= image_tag post_location.get_post_image(100,100), class:"card-img-top"; %>
              <% end %>
            <div class="card-body">
              <%#= image_tag post_location.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
              <p class="card-title">
                <%= link_to(admin_post_location_path(post_location.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= post_location.facility_name %></span></strong>
                <% end %>
              </p>
              <span><i class="fas fa-user"></i> By <%= post_location.user.name %></span></br>
              <span><%= link_to "#{post_location.post_comments.count} コメント", post_location_path(post_location.id), class:"text-dark" %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
