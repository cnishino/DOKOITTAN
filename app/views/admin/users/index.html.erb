<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10'>
      <h2>会員一覧</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %></td>
              <td><%= user.name %></td>
              <td>フォロー数：<%= link_to user.followings.count, user_followings_path(user) %></td>
              <td>フォロワー数：<%= link_to user.followers.count, user_followers_path(user) %></td>
              <td><%= link_to 'Show', admin_user_path(user.id), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

