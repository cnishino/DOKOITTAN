<div class="container">
  <div class="row">
    <div class="col-8 mb-5 offset-1">
      <h5 class="text-center mt-3"><%= @user.name %>さんの会員詳細</h5>
    </div>
  </div>
    <div class="row mb">
      <div class="col-8 mb-2 mx-auto">
        <table class="table">
          <tr>
            <th>会員画像</th>
            <th><%= image_tag @user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></th>
          </tr>
          <tr>
            <th>会員ID</th>
            <th><%= @user.id %></th>
          </tr>
          <tr>
            <th>名前</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @user.is_deleted %>
               <p class="text-secondary">退会</p>
              <% else %>
               <p class="text-success">有効会員</p>
              <% end %>
            </th>
          </tr>
        </table>
      </div>
      <div class="col-10 my-5 mx-auto">
        <tr class="text-center">
          <th><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success offset-4" %></th>
        </tr>
      </div>
    </div>
</div>
