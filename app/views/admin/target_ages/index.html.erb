<div class="container">

  <div class="row">
    <div class="col-12 col-md-3">
      <h4 class="text-center my-5">対象年齢一覧・追加</h4>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10 mb-5">
      <%= form_with model: @target_age, url: admin_target_ages_path, local:true do |f| %>
       <%= f.label :対象年齢, class: "mt-4" %>
       <%= f.text_field :target, class: "mt-4" %>
       <%= f.submit "新規登録", class: "btn btn-success my-2" %>
      <% end %>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10 ">
      <table class="table col-12 mx-auto">
        <thead>
          <tr>
            <th class="text-center">対象年齢</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @target_ages.each do |target_age| %>
           <tr  class="text-center">
             <td><%= target_age.target %></td>
             <td><%= link_to "編集", edit_admin_target_age_path(target_age), class: "btn btn-success" %></td>
             <td><%= link_to "削除", admin_target_age_path(target_age), method: :delete, class: "btn btn-danger" %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>