<div class="container">

  <div class="row">
    <div class="col-10 offset-1">
      <h5 class="text-center my-5">ジャンル編集</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-10 offset-2">
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <%= f.label :ジャンル名, class: "mt-4" %>
        <%= f.text_field :name, class: "offset-1 mt-4" %>
        <%= f.submit "変更を保存", class: "btn btn-success offset-1 my-2" %>
      <% end %>
    </div>
  </div>
</div>